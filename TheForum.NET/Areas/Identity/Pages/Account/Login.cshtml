@page
@using TheForum.NET.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

  <div class="container-fluid" id="main-container">
  <div class="container-fluid" id="breadcrumb">
  <nav class="" aria-label="breadcrumb">
    <ol class="breadcrumb bread-style align-text-bottom">
      <li class="breadcrumb-item bread-item">
        <a  asp-page="/Home/Index" class="text-decoration-none text-dark"
          ><i class="fas fa-home"></i>Home</a>
      </li>
      <li class="breadcrumb-item bread-item active" aria-current="page">
        Login
      </li>
    </ol>
  </nav>
      </div>
     
            <div class="row">
    <div class="col-9">
         <div asp-validation-summary="ModelOnly" class="text-danger h3"></div>
      <h2 class="text-center mt-5 bg-info rounded border border-dark p-3 text-white">Use a local account to log in.</h2>
    <form method="POST" id="account">
      <div class="form-group">
        <label class="h3" asp-for="Input.UserName">Username</label>
        <input type="text"  asp-for="Input.UserName" class="form-control w-25" aria-describedby="email" placeholder="Enter Email" required>
		  <span asp-validation-for="Input.UserName" class="text-danger h3"></span>
      </div>
      <div class="form-group ">
        <label class="h3" asp-for="Input.Password">Password</label>
        <input  asp-for="Input.Password"  class="form-control w-25" aria-describedby="password" placeholder="Enter Password" required>
		  <span asp-validation-for="Input.Password" class="text-danger h3"></span>
      </div>
      <div class="checkbox">
      <label class="h3 mr-5" asp-for="Input.RememberMe"> </label>  
        <input type="checkbox" asp-for="Input.RememberMe" />
                            @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                      
    </div>
      <button id="login-submit" type="submit"  class="btn btn-primary mt-5 w-25 h2">Log in</button>
	    <div>
                    <p class="h3">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="h3">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p class="h3">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
    </form>
    </div>
        <partial name="/Views/Shared/_SidePartial.cshtml" />
    

