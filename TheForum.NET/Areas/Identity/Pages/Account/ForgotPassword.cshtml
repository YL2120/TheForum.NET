@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
  <div class="container-fluid" id="main-container">
  <div class="container-fluid" id="breadcrumb">
  <nav class="" aria-label="breadcrumb">
    <ol class="breadcrumb bread-style align-text-bottom">
      <li class="breadcrumb-item bread-item">
        <a  asp-page="/Home/Index" class="text-decoration-none text-dark"
          ><i class="fas fa-home"></i>Home</a>
      </li>
      <li class="breadcrumb-item bread-item active" aria-current="page">
      <a  asp-page="/Account/Login" >Login</a>  
      </li>
      <li class="breadcrumb-item bread-item active" aria-current="page">
        Confirmation
      </li>
    </ol>
  </nav>
      </div>
   <div class="row">
       <div class="col-9">
<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger h3"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control h3" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label h3"></label>
                <span asp-validation-for="Input.Email" class="text-danger h3"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary h3">Reset Password</button>
        </form>
    </div>
</div>
</div>
 <partial name="/Views/Shared/_SidePartial.cshtml" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
