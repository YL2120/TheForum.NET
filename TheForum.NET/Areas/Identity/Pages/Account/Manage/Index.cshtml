@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger h3"></div>
            <div class="form-group">
                <label asp-for="Username" class="h3"></label>
                <input asp-for="Username" class="form-control h3" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="h3"></label>
                <input asp-for="Input.PhoneNumber" class="form-control h3" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger h3"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary h3">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}